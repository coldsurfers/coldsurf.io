    "ts-pattern": "^5.1.1",
    "twin.macro": "^3.4.1",
    "typescript": "5.3.3",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/plugin-syntax-typescript": "^7.24.1",
