    "@react-email/components": "^0.0.16",
    "@types/node": "18.14.1",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "autoprefixer": "^10.4.19",
    "crypto-js": "^4.2.0",
    "eslint": "8.34.0",
    "eslint-config-next": "13.2.1",
    "google-auth-library": "^9.7.0",
    "next": "14.2.3",
    "next-auth": "5.0.0-beta.18",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.9.13",
    "nodemailer-smtp-transport": "^2.7.4",
