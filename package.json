{
  "name": "@coldsurfers/coldsurf.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "yarn prisma:generate",
    "build": "next build",
    "deploy:preview": "vercel build && vercel deploy --prebuilt",
    "deploy:prod": "vercel build --prod && vercel deploy --prebuilt --prod",
    "dev": "next dev",
    "lint": "next lint",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "prisma:db-push": "yarn prisma db push --schema ./node_modules/@coldsurfers/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "yarn prisma generate --schema ./node_modules/@coldsurfers/prisma-schema/prisma/schema.prisma",
    "start": "next start"
  },
  "dependencies": {
    "@coldsurfers/prisma-schema": "^0.2.0",
